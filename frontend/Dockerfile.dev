# Development Dockerfile
FROM oven/bun:1-alpine

WORKDIR /app

# Copy package files
COPY package.json ./
COPY bun.lockb ./

# Install dependencies
RUN bun install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 8080

# Start development server with hot-reload
CMD ["bun", "run", "dev", "--", "--host", "0.0.0.0"]
